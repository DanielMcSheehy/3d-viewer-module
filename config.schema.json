{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "latitude": {
      "type": "number"
    },
    "longitude": {
      "type": "number"
    },
    "size": {
      "type": "number"
    },
    "devices": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "deviceId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "locationStream": {
            "type": "string"
          },
          "pointCloudStream": {
            "type": "string"
          }
        },
        "required": ["deviceId", "locationStream", "pointCloudStream"]
      }
    }
  },
  "required": ["latitude", "longitude", "devices"]
}
