{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "baseStationLocationStream": {
      "type": "string"
    },
    "size": {
      "type": "number"
    },
    "devices": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "deviceId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "odometryStream": {
            "type": "string"
          }
        },
        "required": ["deviceId", "odometryStream"]
      }
    }
  },
  "required": ["baseStationLocationStream", "mapSize"]
}
