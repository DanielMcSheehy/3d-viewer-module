{
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
